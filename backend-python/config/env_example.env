# 智能教学助手平台环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 基础路径配置
ITAP_BASE_PATH=/data-extend/wangqianxu/wqxspace/ITAP

# 服务器配置
ITAP_HOST=127.0.0.1
ITAP_PORT=8001

# 模型配置
ITAP_DEFAULT_MODEL=RWKV-x060-World-7B-v3-20241112-ctx4096.pth
ITAP_DEFAULT_STRATEGY=cuda fp16
ITAP_EMBEDDING_MODEL=m3e-base

# 数据库配置
ITAP_DB_HOST=localhost
ITAP_DB_PORT=9001
ITAP_DB_USER=wqx
ITAP_DB_PASSWORD=123456
ITAP_DB_NAME=itap
ITAP_DB_CHARSET=utf8mb4

# 文件上传配置
ITAP_MAX_FILE_SIZE=100
ITAP_ALLOWED_EXTENSIONS=pdf,docx,txt,md

# 日志配置
ITAP_LOG_LEVEL=INFO
ITAP_LOG_FILE=api.log

# 向量数据库配置
ITAP_VECTOR_DB_CHUNK_SIZE=768
ITAP_VECTOR_DB_CHUNK_OVERLAP=256

# 会话配置
ITAP_SESSION_TIMEOUT=3600

# 开发模式配置
ITAP_DEBUG=False
ITAP_DEPLOY_MODE=False 