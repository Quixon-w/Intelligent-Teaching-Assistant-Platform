<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.cancan.usercenter.mapper.QuestionsMapper">

    <resultMap id="BaseResultMap" type="org.cancan.usercenter.model.domain.Questions">
        <id property="questionId" column="question_id"/>
        <result property="knowledge" column="knowledge"/>
        <result property="question" column="question"/>
        <result property="options" column="options"/>
        <result property="answer" column="answer"/>
        <result property="explanation" column="explanation"/>
    </resultMap>

    <!--    <sql id="Base_Column_List">-->
    <!--        question_id,knowledge,question,options,answer,explanation-->
    <!--    </sql>-->

    <select id="selectMatchedQuestions" resultType="org.cancan.usercenter.model.domain.Questions">
        SELECT *
        FROM questions
        WHERE questions.knowledge LIKE CONCAT(#{father}, '/%')
    </select>

</mapper>